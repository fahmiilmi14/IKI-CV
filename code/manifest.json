{
  "manifest_version": 3,
  "name": "IKI CV",
  "version": "1.0",
  "description": "Convert LinkedIn profile to ATS or Visual CV",

  "permissions": [
    "activeTab",
    "storage"
  ],

  "host_permissions": [
    "https://www.linkedin.com/*"
  ],

  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/in/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup.html"
  }
}
